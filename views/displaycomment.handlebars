<!DOCTYPE html>
<html>
<title>DISPLAY COMMENT</title>
<link rel="stylesheet" type="text/css" href="/pen.css">

<a id="thelink" href ='{{url}}'>{{sometext}}</a>

<form id="datacontainer" method="post">

    <input type="hidden" name="_csrf" value="{{csrfToken}}">

    <div id="commentinput">
        <a href=""></a>
        <input id="comment" type="text" name="comment" placeholder="comment">
    </div>

    <button id="submitcomment" type="submit">submit</button>
    <a href="/pen">REVERT TO MAIN PAGE</a>

</form>


<div id="commentsspace">

    <ul>
        {{#each myData}}
        <li>
            <p id="placeforcomments">{{this.comment}}</p>
            <form id="datacontainer" method="post">
                <input id="comment" type="text" name="comment">
                <input type="hidden" name="parentcommentid" value='{{id}}'>
                <button id="reply" type="submit">Reply</button>
            </form>
        </li>
        <div id="anothercomment"
            <a href ="item/{{id}}" id="pfac">p</a>
        </div>

    {{/each}}


</ul>

</div>


</html>
