<!DOCTYPE html>
<html>
<title>DISPLAY COMMENT</title>
<link rel="stylesheet" type="text/css" href="/pen.css">

<a id="thelink" href ='{{url}}'>{{sometext}}</a>

<form id="datacontainer" method="post">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <div id="commentinput">
        <a href=""></a>
        <input id="comment" type="text" name="comment" placeholder="comment">
    </div>
    <button id="submitcomment" type="submit">submit</button>
    <a href="/pen" id="revert">REVERT TO MAIN PAGE</a>
</form>


<div id="commentsspace">

    <ul>
        {{#each myData}}
        <li>
            <p id="placeforcomments">{{this.comment}}</p>
            <h1>the links id is {{this.comments_linksid}}</h1>
            <form action="/item/{{this.comments_id}}/subcomment"  id="datacontainer" method="post">
                <input id="comment" type="text" name="comment">
                <input type="hidden" name="parentcommentid" value='{{this.comments_id}}'>
                <input type="hidden" name="linksid" value='{{this.comments_linksid}}'>
                <button id="reply" type="submit">Reply</button>
            </form>
        </li>
        <div id="anothercomment"
            <a href ="item/{{id}}" id="pfac"></a>
        </div>

    {{/each}}


</ul>

</div>


</html>
