<!DOCTYPE html>
<html>
<title>DISPLAY COMMENT</title>
<link rel="stylesheet" type="text/css" href="/pen.css">

<a id="thelink" href ='{{url}}'>{{sometext}}</a>

<form id="datacontainer" method="post">

    <input type="hidden" name="_csrf" value="{{csrfToken}}">

    <div id="commentinput">
        <a href=""></a>
        <input id="comment" type="text" name="comment" placeholder="comment">


    </div>
    <button id="submitcomment" type="submit" name="submit">submit</button>
    <a href="/pen">REVERT TO MAIN PAGE</a>
</div>

</form>


<div id="commentsspace">

    <ul>
        {{#each myData}}
        <li>

            <p id="placeforcomments">
                
                <textarea id="textarea">
                {{this.comment}}
                    </textarea>
                    <button id="reply" type="submit" name="submit">Reply</button>
            </p>

        </li>
        {{/each}}

    </ul>

</div>


</html>
